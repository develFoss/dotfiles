# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --indicator --blur=8x16 --keylayout 0 --force-clock --layoutcolor=ffffff80 --timecolor=ffffff80 --datecolor=ffffff80

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id compton -b --config ~/.config/compton.conf
exec --no-startup-id nitrogen --restore &
exec --no-startup-id sh ~/.config/polybar/run_polybar.sh
exec --no-startup-id blueman-tray
exec --no-startup-id nm-applet
exec --no-startup-id copyq
exec --no-startup-id caffeine
exec --no-startup-id ibus-daemon -drx

# Notification
exec_always --no-startup-id dunst

#Shiny flash
